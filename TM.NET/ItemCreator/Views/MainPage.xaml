<Page
    x:Class="ItemCreator.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:m="using:ItemCreator.Models"
    xmlns:ui="using:CommunityToolkit.WinUI" xmlns:vm="using:ItemCreator.ViewModels" d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
    x:Name="page"
    mc:Ignorable="d">

    <Grid Padding="48">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--<RelativePanel Grid.Row="1">
            <RelativePanel RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" MinWidth="600" MinHeight="300" BorderThickness="1" CornerRadius="4" Background="{StaticResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{StaticResource ControlElevationBorderBrush}">
                <TextBlock RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True">
                <Hyperlink>
                    <Run Text="Browse" />
                </Hyperlink>
                <Run Text="or drop your files"/>
                </TextBlock>
            </RelativePanel>
        </RelativePanel>-->

        <RelativePanel Padding="24" BorderThickness="1" CornerRadius="4" Background="{StaticResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{StaticResource ControlElevationBorderBrush}">
            <TextBlock RelativePanel.AlignVerticalCenterWithPanel="True">MyFile.niktamer</TextBlock>
            <Button Content="Save as" RelativePanel.AlignRightWithPanel="True"/>
        </RelativePanel>

        <ListView Grid.Row="1" Margin="0,24,0,0" ItemsSource="{x:Bind ViewModel.Animations}" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="m:Animation">
                    <RelativePanel Padding="24" Margin="0,0,0,12" BorderThickness="1" CornerRadius="4" Background="{StaticResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{StaticResource ControlElevationBorderBrush}">
                        <StackPanel Orientation="Horizontal" Spacing="24" x:DefaultBindMode="TwoWay">
                            <ComboBox Header="Ease" ItemsSource="{ui:EnumValues Type=m:AnimEase}" SelectedItem="{x:Bind Ease}" MinWidth="150"/>
                            <TextBox Header="Duration" Text="{x:Bind Duration}" MinWidth="150"/>
                            <CheckBox Content="Reverse" IsChecked="{x:Bind Reverse}"/>
                        </StackPanel>
                        <Button RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Command="{Binding ViewModel.RemoveAnimationCommand, ElementName=page}" CommandParameter="{x:Bind}">
                            <FontIcon Glyph="&#xE74D;"/>
                        </Button>
                    </RelativePanel>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.Footer>
                <Button Grid.Row="2" Margin="0,24,0,0" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AddAnimationCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon VerticalAlignment="Center" Glyph="&#xE710;"/>
                        <TextBlock VerticalAlignment="Center">Add new animation</TextBlock>
                    </StackPanel>
                </Button>
            </ListView.Footer>
        </ListView>

    </Grid>
</Page>
